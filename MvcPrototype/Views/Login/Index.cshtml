@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
 <div class="loginNav">
            <input id="userNameInput" type="text" placeholder="User Name"/>
            <input id="passwordInput" type="password" placeholder="Password"/>
            <input id="postLogin" type="button" value="Login"/>
            
        </div>

        <script type="text/javascript">
            $(function () {

                $('#postLogin').click(function (e) {
              
                    e.preventDefault();
                    var p = { UserName: $('#userNameInput').val(), Password: $('#passwordInput').val() };
                    $.ajax(
                {
                    url: '/Login/UserLogin',
                    type: "POST",
                    data: p,
                    dataType: 'json',
                    success: function (data) {
                        var message = data["Message"];
                        var success = Boolean(data["Success"]);
                        if (!success) {
                            alert(message);
                        }
                        if (success) {
                            window.location.href = "/Home/";
                        }
                    
                    }
                });
                });


